<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/welcome"
            android:layout_gravity="center" />

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/FoodBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/backgrounderror"
            android:text="飲食管理" />

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/SportBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgrounderror"
            android:text="運動管理" />

        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/FontBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgrounderror"
            android:text="行事曆/排行榜" />
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/SettingBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgrounderror"
            android:text="成就設定" />
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="86dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="@color/colorCoffee"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用者:" />

            <TextView
                android:paddingLeft="8dp"
                android:background="@drawable/edittext"
                android:textSize="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorCoffee"
                android:id="@+id/accounttv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/loginline" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/logout" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/loginline" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/borderbuttom" />
</RelativeLayout>