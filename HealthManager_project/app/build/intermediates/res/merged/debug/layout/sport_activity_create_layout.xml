<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/backgrounderror"
            android:layout_marginTop="72dp"
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="建立計畫"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/days_tv"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="目標天數:"
                android:textColor="@color/colorCoffee"
                android:textSize="30dp" />

            <Spinner
                android:id="@+id/days_spn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sport_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="每日運動時數:"
                android:textColor="@color/colorCoffee"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/hours_spn"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/hours_tv"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="小時"
                    android:textColor="@color/colorCoffee"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/mins_spn"
                    android:gravity="center_vertical"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mins_tv"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="分鐘"
                    android:textColor="@color/colorCoffee"
                    android:gravity="center_vertical"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="每日提醒時間:"
                android:textColor="@color/colorCoffee"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorCoffee"
                android:text="00:00"
                android:textSize="22dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/timesbtn"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:onClick="timeselect"
            android:scaleType="fitCenter"
            android:src="@drawable/buttonsettime"
            android:text="設定時間"
            android:textColor="@color/colorCoffee"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/enterbtn"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/buttoncreate"
            android:background="@drawable/buttonbg"
            android:onClick="createclick"
            android:text="建立計畫"
            android:textColor="@color/colorCoffee"
            android:textSize="18dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/borderbuttom" />
</RelativeLayout>