<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--  View Title Label -->
            <!--  Name Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="75dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRegisterAccount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/itembox"
                    android:src="@drawable/itemtextaccount" />

                <EditText
                    android:id="@+id/registerAccount"
                    android:background="@drawable/edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:paddingLeft="10dp"
                    android:maxLength = "16"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRegisterName"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/itembox"
                    android:src="@drawable/itemtextname"
                    android:text="Password"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/registerName"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:maxLength="16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRegisterEmail"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/itembox"
                    android:src="@drawable/itemtextemail"
                    android:text="Password"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/registerEmail"
                    android:background="@drawable/edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:paddingLeft="10dp"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnm@."
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRegisterPassword"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/itembox"
                    android:src="@drawable/itemtextpassword"
                    android:text="Password"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/registerPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:maxLength="16"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
                    android:password="true" />
            </LinearLayout>

            <!--  Error message -->

            <TextView
                android:id="@+id/register_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgrounderror"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#e30000"
                android:textStyle="bold" />

            <!--  Login Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="40dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/loginline" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="150dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/login" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="30dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/loginline" />

                <Button
                    android:id="@+id/btnLinkToLoginScreen"
                    android:layout_width="150dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/back" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="40dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/loginline" />
            </LinearLayout>

            <!--  Link to Login Screen -->
        </LinearLayout>

    </ScrollView>
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/borderbuttom" />

</RelativeLayout>